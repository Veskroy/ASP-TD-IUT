 <table>
     <thead>
         <tr>
             <th>Nom</th>
             <th>Continent</th>
             <th>Population</th>
             <th>Superficie</th>
             <th>Drapeaux</th>
         </tr>
     </thead>
@Html.Label("Presention des pays")
@{
    foreach (Pays pays in @ViewData["Toutpays"] as IEnumerable<Pays>)
     {
              <tr>
               <td> @pays.Nom </td>
               <td> @pays.Continent</td>
               <td> @pays.Population</td>
               <td>@pays.Superficie</td>
               <td> <img src="~/Content/@pays.Drapeaux"/></td>
               </tr>
      }

}
</table>

